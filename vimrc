set nocompatible         
filetype plugin indent on 
set t_Co=256             
syntax enable           
colorscheme slate  
:color slate
set number            
set laststatus=2     
set nohlsearch       
set incsearch       
set ignorecase     
set ruler         
set autoindent     
set tabstop=4      
set softtabstop=4   
set shiftwidth=4    
set shiftround      
set expandtab       
set smarttab       
set nowrap        
set relativenumber 
set so=20
set wrap 
set backupdir=$TEMP//
set directory=$TEMP//
:set guioptions-=m  "remove menu bar
:set guioptions-=T  "remove toolbar
:set guioptions-=r  "remove right-hand scroll bar
:set guioptions-=L  "remove left-hand scroll bar
